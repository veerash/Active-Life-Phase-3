<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <com.android.activelife.customviews.CachetProMediumTextView
                android:id="@+id/member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/member_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/hours_rb_inactive"
                android:inputType="textPersonName"
                android:paddingBottom="@dimen/two_dip"
                android:paddingLeft="@dimen/ten_sp"
                android:paddingRight="@dimen/ten_sp"
                android:paddingTop="@dimen/ten_sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxLength="30"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />

            <com.android.activelife.customviews.CachetProMediumTextView
                android:id="@+id/member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="Member Card #"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/member_id_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/hours_rb_inactive"
                android:inputType="textPersonName"
                android:paddingBottom="@dimen/two_dip"
                android:paddingLeft="@dimen/ten_sp"
                android:paddingRight="@dimen/ten_sp"
                android:paddingTop="@dimen/ten_sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxLength="16"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.android.activelife.customviews.CachetProRegularButton
        android:id="@+id/add_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/light_green"
        android:paddingBottom="10sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10sp"
        android:text="Add"
        android:textColor="@android:color/white" />
</LinearLayout>
