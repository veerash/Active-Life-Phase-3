<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/ten_dip">

    <com.android.activelife.customviews.CachetProMediumTextView
        android:id="@+id/tv_ymca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dip"
        android:clickable="false"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dip"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/five_dip"
            android:orientation="vertical"
            android:clickable="false"
            android:padding="@dimen/two_dip">

            <com.android.activelife.customviews.CachetProRegularTextView
                android:id="@+id/tv_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:clickable="false"
                android:textSize="@dimen/sixteen_sp" />

            <com.android.activelife.customviews.CachetProRegularTextView
                android:id="@+id/tv_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dip"
                android:textColor="@color/thick_green"
                android:textSize="@dimen/sixteen_sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/five_dip"
            android:layout_weight="1"
            android:clickable="false"
            android:orientation="vertical"
            android:padding="@dimen/two_dip">

            <com.android.activelife.customviews.CachetProRegularTextView
                android:id="@+id/tv_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:clickable="false"
                android:textSize="@dimen/sixteen_sp" />

            <com.android.activelife.customviews.CachetProRegularTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dip"
                android:gravity="left"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:clickable="false"
                android:textSize="@dimen/sixteen_sp" />


        </LinearLayout>

        <com.android.activelife.customviews.CachetProRegularTextView
            android:id="@+id/reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/five_dip"
            android:background="@drawable/reserve_button_bg"
            android:text="Reserve"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twelve_sp" />

    </LinearLayout>
</LinearLayout>