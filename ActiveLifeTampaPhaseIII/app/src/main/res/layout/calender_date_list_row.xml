<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dip"
    android:orientation="horizontal"
    android:padding="@dimen/ten_dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/five_dip"
        android:orientation="vertical"
        android:padding="@dimen/two_dip">

        <TextView
            android:id="@+id/tv_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:30am"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp" />

        <TextView
            android:id="@+id/tv_mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dip"
            android:text="55 minutes"
            android:textColor="@color/aqua"
            android:textSize="@dimen/twenty_sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/five_dip"
        android:id="@+id/event_layout"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="@dimen/two_dip">

        <TextView
            android:id="@+id/tv_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="R.I.P.P.F.D"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dip"
            android:gravity="center_horizontal"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/five_dip"
        android:src="@drawable/schedule_add" />

</LinearLayout>
