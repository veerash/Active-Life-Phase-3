<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/messages_rg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:visibility="gone"
            android:weightSum="2">

            <com.android.activelife.tampa.customviews.CachetProRegularRadioButton
                android:id="@+id/branch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/hours_rb_selector"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Branch"
                android:textColor="@drawable/hours_rb_text_selecto0r" />

            <com.android.activelife.tampa.customviews.CachetProRegularRadioButton
                android:id="@+id/assosciation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/hours_rb_selector"
                android:button="@null"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Assosciation"
                android:textColor="@drawable/hours_rb_text_selecto0r" />

        </RadioGroup>

        <ListView
            android:id="@+id/messages_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/statusBarColor"
            android:dividerHeight="1sp"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />
    </LinearLayout>
</LinearLayout>